<?xml version="1.0" encoding="utf-8"?>
<com.hendraanggrian.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/revealFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="32dp"
        android:foreground="?selectableItemBackground"
        android:theme="@style/Theme.AppCompat"
        android:visibility="invisible"
        app:cardBackgroundColor="?colorAccent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:navigationIcon="?homeAsUpIndicator">

        </androidx.appcompat.widget.Toolbar>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:text="Tap me" />
</com.hendraanggrian.widget.RevealFrameLayout>